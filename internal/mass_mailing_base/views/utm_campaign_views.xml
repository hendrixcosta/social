<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record model="ir.ui.view" id="utm_campaign_view_form">
            <field name="name">utm.campaign.view.form</field>
            <field name="model">utm.campaign</field>
            <field name="inherit_id" ref="utm.utm_campaign_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="replace">
                    <header>
                        <button name="action_start_campaign" class="oe_highlight" type="object"  string="Start"/>
                        <button name="action_schedule_campaign" class="oe_highlight" type="object"  string="Schedule"/>
                        <button name="action_stop_campaign" class="oe_highlight" type="object"  string="Stop"/>
                        <field name="stage_id" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                </xpath>
                <button name="action_redirect_to_invoiced" position="replace"></button>
                <button name="action_redirect_to_quotations" position="replace"></button>
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button name="action_redirect_to_mailing_whatsapp"
                            type="object"
                            class="oe_stat_button order-11"
                            attrs="{'invisible': [('mailing_whatsapp_count', '=', 0)]}"
                            icon="fa-mobile">
                        <field name="mailing_whatsapp_count" widget="statinfo" string="Whatsapp"/>
                    </button>
                </xpath>
                <xpath expr="//notebook" position="replace">
                    <field name="mailing_activities_count" invisible="1"/>
                    <group name="Activities" attrs="{'invisible': [('mailing_activities_count', '=', 0)]}" colspan="4">
                        <field name="mailing_activities_ids" nolabel="1">
                            <tree>
                                <field name="name" string="Activity's Name"/>
                                <field name="mailing_type"/>
                                <field name="sent_date"/>
                                <field name="state"/>
                                <field name="delivered"/>
                                <field name="opened"/>
                                <field name="replied"/>
                                <field name="bounced"/>
                                <button name="action_duplicate" type="object" string="Duplicate"/>
                            </tree>
                        </field>
                    </group>


                    <footer>
                        <button name="action_wizard_mailing_mail" type="object" class="btn-link" icon="fa-plus-circle"
                                groups="mass_mailing.group_mass_mailing_campaign" string="E-mail Activity"/>
                        <button name="action_wizard_mailing_sms" type="object"  class="btn-link" icon="fa-plus-circle"
                                groups="mass_mailing.group_mass_mailing_campaign"  string="SMS Activity"/>
                        <button name="action_wizard_mailing_whatsapp" type="object"  class="btn-link" icon="fa-plus-circle"
                                groups="mass_mailing.group_mass_mailing_campaign"  string="Whatsapp Activity"/>

                        <group attrs="{'invisible': [('mailing_activities_count', '=', 0)]}">
                            <div class="o_utm_campaign_mass_mailing_substats d-flex justify-content-end align-items-center">
                                <div class="d-flex justify-content-end align-items-center flex-column">
                                    <label for="received_ratio" string="Delivered" class="m-0"/>
                                    <div class="m-0">
                                        <span class="text-right">
                                            <field name="received_ratio"/>
                                            <span>%</span>
                                        </span>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-end align-items-center flex-column">
                                    <label for="opened_ratio" string="Opened" class="m-0"/>
                                    <div class="m-0">
                                        <span class="text-right">
                                            <field name="opened_ratio"/>
                                            <span>%</span>
                                        </span>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-end align-items-center flex-column">
                                    <label for="replied_ratio" string="Replied" class="m-0"/>
                                    <div class="m-0">
                                        <span class="text-right">
                                            <field name="replied_ratio"/>
                                            <span>%</span>
                                        </span>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-end align-items-center flex-column">
                                    <label for="bounced_ratio" string="Bounced" class="m-0"/>
                                    <div class="m-0">
                                        <span class="text-right">
                                            <field name="bounced_ratio"/>
                                            <span>%</span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </group>
                    </footer>
                </xpath>

            </field>
        </record>

        <record model="ir.ui.view" id="utm_campaign_view_kanban">
            <field name="name">utm.campaign.view.kanban</field>
            <field name="model">utm.campaign</field>
            <field name="inherit_id" ref="utm.utm_campaign_view_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="mailing_whatsapp_count"/>
                </xpath>
                <xpath expr="//ul[@id='o_utm_actions']">
                    <a name="action_redirect_to_mailing_whatsapp" type="object"
                       t-attf-class="oe_mailings #{record.mailing_whatsapp_count.raw_value === 0 ? 'text-muted' : ''}">
                        <t t-raw="record.mailing_whatsapp_count.raw_value"/> Whatsapp
                    </a>
                </xpath>
            </field>
        </record>

</odoo>
